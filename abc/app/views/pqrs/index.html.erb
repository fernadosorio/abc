<div class="container">
    <div class="row">
        <br>
        <div class="col s12">
            <div class="card-panel">
        <h5 class="center">PQRS</h1>
                    <p id="notice"><%= notice %></p>

                    <table>
                      <thead>
                        <tr>
                          <th>First name</th>
                          <th>Last name</th>
                          <th>Email</th>
                          <th>Title</th>
                          <th>Subject</th>
                          <th>Body</th>
                          >
                          
                          <th>Pqr files</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @pqrs.each do |pqr| %>
                          <tr>
                            <td><%= pqr.first_name %></td>
                            <td><%= pqr.last_name %></td>
                            <td><%= pqr.email %></td>
                            <td><%= pqr.title %></td>
                            <td><%= pqr.subject %></td>
                            <td><%= pqr.body %></td>
                            
                            <td><%= pqr.pqr_files %></td>
                          
                            <td><%= link_to 'Show', pqr %></td>
                              <% if current_user && current_user.admin
                                 %> 
                            <td><%= link_to 'Edit', edit_pqr_path(pqr) %></td>
                            <td><%= link_to 'Destroy', pqr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>

                    <br>

                    <%= link_to 'Crear Pqr', new_pqr_path, class:'btn pink' %>


            </div>
      </div>
  </div>
</div>
